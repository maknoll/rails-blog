source 'http://rubygems.org'

gem 'rails', '3.2.1'

# Bundle edge Rails instead:
# gem 'rails',     :git => 'git://github.com/rails/rails.git'

gem 'json'
gem 'rdiscount'
gem 'haml-rails'
gem 'coffee-rails'
gem 'twitter'
gem 'paperclip'
gem 'aws-sdk'
gem 'aws-s3'

group :development do
  gem "sqlite3"
  gem 'thin'
end

group :production do
  gem "pg"
  gem 'execjs'
  gem 'therubyracer'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

# To use ActiveModel has_secure_password
gem 'bcrypt-ruby'

# Use unicorn as the web server
# gem 'unicorn'

# Deploy with Capistrano
# gem 'capistrano'

# To use debugger
# gem 'ruby-debug'

